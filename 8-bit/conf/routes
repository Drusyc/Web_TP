# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# 8-bit routes
GET     /                                       EightBit.index
GET     /about                                  About.show
GET     /conditions                             Conditions.show
GET     /configuration                          Configuration.show
GET     /contact                                Contact.show
GET     /privacy                                Privacy.show
GET     /search                                 Search.show
POST    /signup                                 Signup.show
GET     /signup                                 Secure.login
GET     /suggestions                            Suggestions.show

# Secure routes
POST    /authenticate                           Secure.authenticate
GET     /logout                                 Secure.logout

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
